{% extends 'base.html.twig' %}

{% block title %}{% trans %}Liste auteur{% endtrans %}{% endblock %}
{% block stylesheets %}
	<style>
		th,
		tfoot {
			font-size: 15px !important;
			text-align: center !important;
			font-weight: bold !important;
			background-color: #F1F1F1 !important;
		}

		tr:hover {
			background-color: rgba(62, 128, 235, 0.2) !important;
			color: #3e80eb !important;
		}
        td{
            text-align: center !important; 
            vertical-align: middle !important;
        }
	</style>
{% endblock %}

{% block body %}
        

                <!--Page header-->
                <div class="page-header">
                    <div class="page-leftheader">
                        <h4 class="page-title mb-0 text-primary"><i class="fa fa-navicon me-2"></i>{% trans %}Liste des auteurs{% endtrans %}</h4>
                    </div>
                    <div class="page-rightheader">
                        <div class="btn-list">
                            <a href="{{ path ('ajout_auteur')}}" class="btn btn-outline-primary">
                                <i class="fa fa-plus me-2"></i>{% trans %}Ajouter un auteur{% endtrans %}
                            </a>
                            <a href="javascript:void(0);"  class="btn btn-outline-primary btn-pill">
                                <i class="fe fe-printer me-2"></i> {% trans %}Imprimer toutes les auteurs{% endtrans %}
                            </a>
                            
                        </div>
                    </div>
                </div>
                <!--End Page header-->

                <!-- Row -->
                <div class="row">
                    <div class="col-12">

                        <!--div-->
                        <div class="card border-primary">
                            <div class="card-header">
                                <div class="col-md-8">
                                    <div class="card-title"><i class="fa fa-navicon me-2"></i>{% trans %}Les auteurs{% endtrans %}</div>
                                </div>
                                <div class="col-md-4 text-right">
                                    <button type="button" class="btn btn-primary mt-1 mb-1 ">
                                        <span class="badge bg-white text-dark">{{ auteurs|length|number_format }}</span>
                                        <span>{% trans %}auteurs enregitrés{% endtrans %}</span>
                                    </button>
                                </div>
                                
                            </div>
                            <div class="card-body">
                                <div class="">
                                    <div class="table-responsive">
                                        <table id="example" class="table table-bordered text-nowrap key-buttons">
                                            <thead>
                                                <tr>
                                                    <th class="border-bottom-0">N°</th>
                                                    <th class="border-bottom-0">{% trans %}Nom{% endtrans %}</th>
                                                    <th class="border-bottom-0">{% trans %}Date de naissance{% endtrans %}</th>
                                                    <th class="border-bottom-0">{% trans %}Genre{% endtrans %}</th>
                                                    <th class="border-bottom-0">{% trans %}Nationalité{% endtrans %}</th>
                                                    {# <th class="border-bottom-0">{% trans %}Biographie{% endtrans %}</th> #}
                                                    <th class="border-bottom-0">{% trans %}Nombre de livres{% endtrans %}</th>
                                                    <th class="border-bottom-0">{% trans %}Opérations{% endtrans %}</th>
                                                </tr>
                                            </thead>
                                            <tfoot>
                                                <tr>
                                                    <th class="border-bottom-0">N°</th>
                                                    <th class="border-bottom-0">{% trans %}Nom{% endtrans %}</th>
                                                    <th class="border-bottom-0">{% trans %}Date de naissance{% endtrans %}</th>
                                                    <th class="border-bottom-0">{% trans %}Genre{% endtrans %}</th>
                                                    <th class="border-bottom-0">{% trans %}Nationalité{% endtrans %}</th>
                                                    {# <th class="border-bottom-0">{% trans %}Biographie{% endtrans %}</th> #}
                                                    <th class="border-bottom-0">{% trans %}Nombre de livres{% endtrans %}</th>
                                                    <th class="border-bottom-0">{% trans %}Opérations{% endtrans %}</th>
                                                </tr>
                                            </tfoot>
                                            <tbody>
                                                {% set i = 1 %}
                                                {% for auteur in auteurs %}
                                                    <tr>
                                                        <td><span class="badge bg-primary">{{ i }}</span></td>
                                                        <td>{{ auteur.nom }}</td>
                                                        <td>{{ auteur.dateNaissanceAt|date('d-M-Y') }}</td>
                                                        <td>
                                                            {% if auteur.sexe.sexe == "M" %}
                                                                <span class="badge bg-primary">{{ auteur.sexe.sexe }}</span>
                                                                {% else %}
                                                                <span class="badge bg-danger">{{ auteur.sexe.sexe }}</span>
                                                            {% endif %}
                                                        </td>
                                                        <td><span class="badge bg-primary">{{ auteur.nationalite.nationalite }}</span></td>
                                                        {# <td>{{ auteur.biographie|truncate_40 }}</td> #}
                                                        <td>
                                                            {% if auteur.livres|length > 0 %}
                                                                <span class="badge bg-primary"> {{ auteur.livres|length|number_format }} </span>
                                                                {% else %}
                                                                <span class="badge bg-danger"> {{ auteur.livres|length|number_format }} </span>
                                                            {% endif %}
                                                            
                                                            
                                                        </td>
                                                        <td>
                                                            <div class="btn-group">
                                                                <a href="javascript:void(0);" class="btn btn-light btn-sm" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Options <i class="fa fa-angle-down"></i>
                                                                </a>
                                                                <div class="dropdown-menu">
                                                                    <a class="dropdown-item" href="{{ path ('afficher_auteur', {'slug': auteur.slug}) }}"><i class="fe fe-eye me-2"></i>{% trans %}Afficher{% endtrans %} </a>
                                                                    <a class="dropdown-item" href="{{ path ('modifier_auteur', {'slug': auteur.slug}) }}"><i class="fe fe-edit me-2"></i>{% trans %}Modifier{% endtrans %} </a>

                                                                    {% if auteur.livres|length > 0 %}
                                                                        <a class="dropdown-item" href="javascript:void(0);" 
                                                                            onclick="swal({
                                                                                'title': '{% trans %}Danger{% endtrans %}',
                                                                                'text': '{% trans %}Suppression annulée! Cet auteur a des livres.{% endtrans %}',
                                                                                'type': 'error',
                                                                                'showCancelButton': true,
                                                                                'showConfirmButton': false,
                                                                                'confirmButtonText': false,
                                                                                'cancelButtonText': 'OK',
                                                                                'cancelButtonColor': '#088318', 
                                                                            })">
                                                                            <i class="fa fa-trash me-2"></i>{% trans %}Supprimer{% endtrans %}
                                                                        </a>
                                                                        {% else %}

                                                                        <a class="dropdown-item" href="javascript:void(0);" 
                                                                            onclick="swal({
                                                                                'title': 'Avertissement !', 
                                                                                'type': 'warning', 
                                                                                'text': 'Voulez-vous vraiment supprimer cet auteur ' + ' {{ auteur.nom }} ?', 
                                                                                'showCancelButton': true, 
                                                                                'confirmButtonText': 'Oui', 
                                                                                'confirmButtonColor': '#f00', 
                                                                                'cancelButtonText': 'Non', 
                                                                                'cancelButtonColor': '#186106', 
                                                                                'confirmButtonPath': '{{ path('supprimer_auteur', {'slug': auteur.slug}) }} '});">
                                                                            <i class="fa fa-trash me-2"></i>{% trans %}Supprimer{% endtrans %}
                                                                        </a>
                                                                    {% endif %}
                                                                    
                                                                </div>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                    {% set i = i + 1 %}
                                                {% endfor %}
                                                    
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--/div-->

                    </div>
                </div>
                <!-- /Row -->

            </div>
        </div><!-- right app-content-->
    </div>
{% endblock %}
