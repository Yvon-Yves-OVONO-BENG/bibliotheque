{% extends 'base.html.twig' %}

{% block title %}{% trans %}Profil de {% endtrans %} {{ genreLittEraire.nom }}{% endblock %}
{% block stylesheets %}
	<style>
		th,
		tfoot {
			font-size: 15px !important;
			text-align: center !important;
			font-weight: bold !important;
			background-color: #F1F1F1 !important;
		}

		tr:hover {
			background-color: rgba(62, 128, 235, 0.2) !important;
			color: #3e80eb !important;
		}
        td{
            text-align: center !important; 
            vertical-align: middle !important;
        }
	</style>
{% endblock %}

{% block body %}
        <!--Page header-->
						<div class="page-header">
							<div class="page-leftheader">
								<h4 class="page-title mb-0 text-primary"><i class="fa fa-truck me-2"></i>{% trans %}Profil de{% endtrans %} {{ genreLittEraire.nom }}</h4>
							</div>
							<div class="page-rightheader">
								<div class="btn-list">
									<a href="{{ path ('ajout_genreLittEraire') }}" class="btn btn-outline-primary"><i class="fe fe-user-plus me-2"></i>
										{% trans %}Ajouter un genreLittEraire{% endtrans %}
                                    </a>
									<a href="{{ path ('liste_genreLittEraire') }}"  class="btn btn-outline-primary btn-pill" >
										<i class="fa fa-users me-2 fs-14"></i>{% trans %}Liste des genreLittEraires{% endtrans %}
                                    </a>
									
								</div>
							</div>
						</div>
						<!--End Page header-->

						<!-- Row -->
						<div class="row">
							<div class="col-xl-3 col-lg-3 col-md-12">
								<div class="card box-widget widget-user">
									<div class="widget-user-image mx-auto mt-5">
                                        <img alt="User Avatar" class="rounded-circle" src="{{ asset ('assets/images/users/2.jpg') }}"></div>
									<div class="card-body text-center">
										<div class="pro-user">
											<h4 class="pro-user-username mb-1 font-weight-bold">{{ genreLittEraire.nom }}</h4>
											<h6 class="pro-user-desc text-muted">{{ genreLittEraire.typeAuteur.typeAuteur }}</h6>
											
											<a href="javascript:void(0);" class="btn btn-success mt-3"><i class="fa fa-print me-2"></i>{% trans %}Imprimer{% endtrans %}</a>
											<a href="{{ path ('modifier_genreLittEraire', {'slug': genreLittEraire.slug}) }}" class="btn btn-primary mt-3"><i class="fa fa-pencil me-2"></i>{% trans %}Modifier{% endtrans %}</a>
										</div>
									</div>
								</div>
								<div class="card">
									<div class="card-header">
										<h3 class="card-title">{% trans %}Informations{% endtrans %}</h3>
								   </div>
									<div class="card-body">
										<div class="table-responsive">
											<table class="table table-bordered mb-0">
												<tbody>
													<tr>
														<td class="">
															<span class="font-weight-semibold w-50">{% trans %}Date Naissance{% endtrans %} </span>
														</td>
														<td class="">{{ genreLittEraire.dateNaissanceAt|date('d-M-Y') }}</td>
													</tr>
													<tr>
														<td class="">
															<span class="font-weight-semibold w-50">{% trans %}Genre{% endtrans %} </span>
														</td>
														<td class="">{{ genreLittEraire.sexe.sexe }}</td>
													</tr>
													<tr>
														<td class="">
															<span class="font-weight-semibold w-50">{% trans %}Nationalit√©{% endtrans %} </span>
														</td>
														<td class="">{{ genreLittEraire.nationalite.nationalite }}</td>
													</tr>
													<tr>
														<td class="">
															<span class="font-weight-semibold w-50">{% trans %}Nombre de livres{% endtrans %} </span>
														</td>
														<td class="">{{ genreLittEraire.livres|length|number_format }} </td>
													</tr>
													<tr>
														<td class="">
															<span class="font-weight-semibold w-50">Email </span>
														</td>
														<td class="">{{ genreLittEraire.email }}</td>
													</tr>
													<tr>
														<td class="">
															<span class="font-weight-semibold w-50">{% trans %}Contact(s){% endtrans %} </span>
														</td>
														<td class="">{{ genreLittEraire.telephone }}</td>
													</tr>
												</tbody>
											</table>
										</div>
									</div>
								</div>
							</div>
							<div class="col-xl-9 col-lg-9 col-md-12">
								<div class="main-content-body main-content-body-profile card">
									<div class="card-header">
										<h3 class="card-title">{% trans %}Biographie{% endtrans %}</h3>
									</div>
									<div class="main-profile-body">
										<div class="card-body">
											<div class="main-profile-bio mb-5">
												<p>{{ genreLittEraire.biographie }}</p>
											</div>
											
										</div>
									</div>
								</div>
                                <div class="tab-pane" id="tab-8">
                                    <div class="card p-5">
                                        <div class="row">
                                            {% for livre in genreLittEraire.livres %}
                                                <div class="col-lg-6">
                                                    <div class="d-flex align-items-center border p-3 mb-3 br-7">
                                                        <div class="avatar avatar-lg brround d-block cover-image" data-image-src="../../assets/images/users/7.jpg" >
                                                        </div>
                                                        <div class="wrapper ms-3">
                                                            <p class="mb-0 mt-1  font-weight-semibold">Denis Rosenblum</p>
                                                            <small class="text-muted">Project Manager</small>
                                                        </div>
                                                        <div class="float-end ms-auto">
                                                            <a href="javascript:void(0);" class="btn btn-primary btn-md">View</a>
                                                        </div>
                                                    </div>
                                                </div>
                                            {% endfor %}
                                            
                                            <div class="col-md-12">
                                                <a class="btn d-grid btn-light" href="javascript:void(0);"><i class="fe fe-chevron-down"></i>{% trans %}Tout afficher{% endtrans %}</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
							</div>
                            
						</div>
					</div>
				</div><!-- right app-content-->
			</div>

{% endblock %}
