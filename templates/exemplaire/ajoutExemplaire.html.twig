{% extends 'base.html.twig' %}

{% block title %}{% trans %}Ajout des exemplaires{% endtrans %}{% endblock %}

{% block body %}
            <!--Page header-->
            <div class="page-header">
                <div class="page-leftheader">
                    {% if slug == null %}
                        <h4 class="page-title mb-0 text-primary"><i class="fa fa-plus me-2"></i>{% trans %}Ajout d'un exemplaire{% endtrans %}</h4>
                        {% else %}
                        <h4 class="page-title mb-0 text-primary"><i class="fa fa-edit me-2"></i>{% trans %}Modification d'un exemplaire{% endtrans %}</h4>
                    {% endif %}
                </div>
                <div class="page-rightheader">
                    <div class="btn-list">
                        <a href="{{ path ('liste_exemplaire')}}" class="btn btn-outline-primary"><i class="fa fa-list me-2"></i>{% trans %}Liste des exemplaires{% endtrans %}</a>
                    </div>
                </div>
            </div>
            <!--End Page header-->
        
                {% if slug == null %}
                    <div class="card border-primary">
                    {% else %}
                    <div class="card border-danger">
                {% endif %}
                <div class="card-header">
                        <div class="col-md-8">
                            <div class="card-title">
                                {% if slug == null %}
                                    <i class="fa fa-plus me-2"></i> {% trans %}Ajout d'un exemplaire{% endtrans %}
                                {% else %}
                                    <i class="fa fa-edit me-2"></i> {% trans %}Modification d'un exemplaire : {% endtrans %} <span class="badge badge-default">{{ exemplaire.codeExemplaire }} {{ exemplaire.livre.titre }}</span>
                                {% endif %}
                            </div>
                        </div>
                        <div class="col-md-4 text-right">
                            <button type="button" class="btn btn-primary  mt-1 mb-1 me-3 form-control-sm">
                                <span class="badge bg-white text-dark rounded-pill">{{ exemplaires|length|number_format }}</span>
                                <span>{% trans %}Exemplaires enregistrés{% endtrans %}</span>
                            </button>
                        </div>
                    {# Fin ligne afficher les armoires #}
                </div>
                <div class="card-body">
                    <div class="col-md-12">
                        {{ form_start(ajoutExemplaireForm, {'attr': {'class': 'row g-3 needs-validation', 'novalidate': ""}}) }}
                            <div class="row mb-5">
                                <div class="col-md-3">
                                    <div class="form-group">
                                        {{ form_label(ajoutExemplaireForm.livre)}}
                                        {{ form_widget(ajoutExemplaireForm.livre, {'attr': {'class': 'form-select form-select-sm bg-info-transparent', 'id':'validationCustom04'}}) }}
                                        <div class="invalid-feedback">
                                            {% trans %}Veuillez choisir le tivre !{% endtrans %}
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        {{ form_label(ajoutExemplaireForm.etatExemplaire)}}
                                        {{ form_widget(ajoutExemplaireForm.etatExemplaire, {'attr': {'class': 'form-select form-select-sm bg-info-transparent', 'id':'validationCustom04'}}) }}
                                        <div class="invalid-feedback">
                                            {% trans %}Veuillez choisir l'état de l'exemplaires{% endtrans %}
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        {{ form_label(ajoutExemplaireForm.dateAcquisitionAt)}}
                                        {{ form_widget(ajoutExemplaireForm.dateAcquisitionAt, {'attr': {'class': 'form-control form-control-sm bg-info-transparent', 'id':'validationCustom04'}}) }}
                                        <div class="invalid-feedback">
                                            {% trans %}Veuillez saisir la date d'acquisition{% endtrans %}
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        {{ form_label(ajoutExemplaireForm.codeExemplaire)}}
                                        {{ form_widget(ajoutExemplaireForm.codeExemplaire, {'attr': {'class': 'form-control form-control-sm bg-info-transparent', 'id':'validationCustom04'}}) }}
                                        <div class="invalid-feedback">
                                            {% trans %}Veuillez saisir le code de l'exemplaire !{% endtrans %}
                                        </div>
                                    </div>
                                </div>
                                <input type="hidden" value="{{ csrfToken }}" name="csrfToken">
                              
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label style="color: #fff;">.</label>
                                            {% if slug == null %}
                                                <button type="submit" class="btn btn-outline-primary btn-medium w-100 br-7" name="ajoutExemplaire">
                                                    <i class="fa fa-save me-2"></i> {% trans %}Enregistrer{% endtrans %}
                                                </button>
                                            {% else %}
                                                <button type="submit" class="btn btn-outline-primary btn-medium w-100 br-7" name="modifierExemplaire">
                                                    <i class="fa fa-save me-2"></i>
                                                    {% trans %}Enregistrer les modifications{% endtrans %}
                                                </button>
                                            {% endif %}
                                    </div>
                                </div>
                                <div class="col-md-2">
                                </div>
                            </div>

                        {{ form_end(ajoutExemplaireForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
